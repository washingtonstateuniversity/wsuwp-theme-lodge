{
	"extends": "eslint:recommended",
	"plugins": [],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"experimentalDecorators": true,
		"allowImportExportEverywhere": true
	},
	"rules": {
		"no-console": "warn",
		"no-var": "error",
		"prefer-const": "error",
		"semi": "error",
		"no-unused-vars": "warn"
	},
	"globals": {
		"Modernizr": true,
		"window": true,
		"document": true
	},
	"env": {
		"node": true,
		"browser": true
	}
}
